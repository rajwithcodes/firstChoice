<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Products | 1stChoice ERP</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700;800&display=swap" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: "Poppins", sans-serif;
      background: linear-gradient(135deg, #fff5e6 0%, #ffe8f0 50%, #e6f7ff 100%);
      min-height: 100vh;
      overflow-x: hidden;
    }

    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 25px 40px;
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(20px);
      border-radius: 25px;
      margin: 30px auto;
      width: 90%;
      box-shadow: 0 10px 40px rgba(255, 107, 157, 0.15);
      animation: slideDown 0.6s ease;
    }

    .navbar-left {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .navbar-logo {
      width: 60px;
      height: 60px;
      border-radius: 50%;
      border: 3px solid #fff;
      box-shadow: 0 5px 15px rgba(255, 107, 157, 0.3);
    }

    .navbar h1 {
      font-size: 1.8rem;
      font-weight: 800;
      background: linear-gradient(135deg, #ff6b9d, #ffa94d, #4ecdc4);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-size: 200% 200%;
      animation: gradientFlow 4s ease infinite;
    }

    .navbar a {
      text-decoration: none;
      background: linear-gradient(135deg, #4ecdc4, #6bcb77);
      padding: 12px 28px;
      color: white;
      font-weight: 600;
      border-radius: 50px;
      transition: all 0.4s ease;
      box-shadow: 0 8px 25px rgba(78, 205, 196, 0.4);
    }

    .navbar a:hover {
      transform: translateY(-3px);
      box-shadow: 0 12px 35px rgba(78, 205, 196, 0.6);
    }

    @keyframes gradientFlow {

      0%,
      100% {
        background-position: 0% 50%;
      }

      50% {
        background-position: 100% 50%;
      }
    }

    .container {
      max-width: 1200px;
      margin: 40px auto;
      background: rgba(255, 255, 255, 0.95);
      border-radius: 25px;
      padding: 40px 30px;
      box-shadow: 0 15px 50px rgba(0, 0, 0, 0.08);
      backdrop-filter: blur(15px);
      animation: fadeInUp 0.8s ease;
    }

    h2 {
      text-align: center;
      font-size: 2.2rem;
      font-weight: 800;
      margin-bottom: 25px;
      background: linear-gradient(135deg, #ff6b9d, #ffa94d, #4ecdc4);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    /* Search bar */
    #searchInput {
      padding: 12px 18px;
      width: 60%;
      border-radius: 12px;
      border: 2px solid #ff6b9d;
      font-size: 1rem;
      outline: none;
      margin-bottom: 25px;
    }

    #searchInput:focus {
      border-color: #4ecdc4;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      table-layout: fixed;
      border-radius: 20px;
      overflow: hidden;
    }

    th,
    td {
      text-align: center;
      padding: 16px 18px;
      font-size: 1rem;
      border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    th {
      background: linear-gradient(135deg, #ff6b9d, #ffa94d);
      color: white;
      font-weight: 700;
    }

    tbody tr:nth-child(even) td {
      background: #fafafa;
    }

    tbody tr:hover {
      background: linear-gradient(90deg, rgba(255, 107, 157, 0.08), rgba(78, 205, 196, 0.05));
      transform: translateX(4px);
      box-shadow: 0 8px 25px rgba(255, 107, 157, 0.1);
      transition: 0.3s ease;
    }

    th:nth-child(1),
    td:nth-child(1) {
      width: 5%;
      font-weight: 700;
      color: #ff6b9d;
    }

    th:nth-child(2),
    td:nth-child(2) {
      width: 12%;
      font-weight: 600;
    }

    th:nth-child(3),
    td:nth-child(3) {
      width: 20%;
    }

    th:nth-child(4),
    td:nth-child(4) {
      width: 15%;
    }

    th:nth-child(5),
    td:nth-child(5) {
      width: 15%;
    }

    th:nth-child(6),
    td:nth-child(6) {
      width: 10%;
      font-weight: 600;
    }

    th:nth-child(7),
    td:nth-child(7) {
      width: 8%;
      font-weight: 600;
    }

    th:nth-child(8),
    td:nth-child(8) {
      width: 15%;
    }

    .action-btn {
      padding: 10px 16px;
      border-radius: 10px;
      border: none;
      font-weight: 600;
      color: white;
      cursor: pointer;
      margin: 2px;
      transition: .3s;
    }

    .edit-btn {
      background: linear-gradient(135deg, #4ecdc4, #6bcb77);
    }

    .delete-btn {
      background: linear-gradient(135deg, #ff6b9d, #ffa94d);
    }

    .action-btn:hover {
      transform: translateY(-3px);
      opacity: .95;
    }

    .empty {
      text-align: center;
      padding: 80px 20px;
      font-size: 1.4rem;
      color: #7f8c8d;
      font-weight: 600;
    }

    .made-by {
      position: fixed;
      bottom: 20px;
      right: 20px;
      font-size: .9rem;
      background: #fff;
      padding: 10px 20px;
      border-radius: 20px;
      box-shadow: 0 8px 25px rgba(255, 107, 157, 0.15);
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(40px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes slideDown {
      from {
        opacity: 0;
        transform: translateY(-40px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @media(max-width:768px) {
      table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }

      .navbar {
        flex-direction: column;
        gap: 15px;
        padding: 20px;
      }

      #searchInput {
        width: 90%;
      }
    }
  </style>
</head>

<body>
  <nav class="navbar">
    <div class="navbar-left">
      <img src="/images/logo.jpg" class="navbar-logo" />
      <h1>All Products</h1>
    </div>
    <a href="/dashboard">‚Üê Back</a>
  </nav>

  <div class="container">
    <h2>üì¶ Product Inventory</h2>

    <center><input type="text" id="searchInput" placeholder="Search by Name or Product ID..."
        onkeyup="searchProducts()"></center>

    <% if (products.length===0) { %>
      <div class="empty">No products available yet. Add new products to see them here!</div>
      <% } else { %>

        <table>
          <thead>
            <tr>
              <th>#</th>
              <th>Product ID</th>
              <th>Product Name</th>
              <th>Category</th>
              <th>Marked Price (‚Çπ)</th>
              <th>Wholesale Price (‚Çπ)</th>
              <th>Stock</th>
              <th>Actions</th>
            </tr>
          </thead>

          <tbody>
            <% products.forEach((product,index)=>{ %>
              <tr>
                <td>
                  <%= index+1 %>
                </td>
                <td>
                  <%= product.productId %>
                </td>
                <td>
                  <%= product.name %>
                </td>
                <td>
                  <%= product.category ? product.category.name : "‚Äî" %>
                </td>
                <td>
                  <%= product.markedPrice.toFixed(2) %>
                </td>
                <td>
                  <%= product.wholesalePrice ? product.wholesalePrice.toFixed(2) : "‚Äî" %>
                </td>
                <td>
                  <%= product.stockQty %>
                </td>
                <td>
                  <a href="/products/<%= product._id %>/edit"><button class="action-btn edit-btn">‚úèÔ∏è Edit</button></a>
                  <form action="/products/<%= product._id %>?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="action-btn delete-btn"
                      onclick="return confirm('Delete this product?')">üóë Delete</button>
                  </form>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
        <% } %>
  </div>

  <div class="made-by">Made with ‚ù§Ô∏è by rajSinghania</div>

  <script>
    function searchProducts() {
      let input = document.getElementById("searchInput").value.toLowerCase();
      document.querySelectorAll("tbody tr").forEach(row => {
        let id = row.children[1].innerText.toLowerCase();
        let name = row.children[2].innerText.toLowerCase();
        row.style.display = (id.includes(input) || name.includes(input)) ? "" : "none";
      });
    }
  </script>
</body>

</html>
