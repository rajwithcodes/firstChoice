<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sales Report | 1stChoice ERP</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(
          135deg,
          #fff5e6 0%,
          #ffe8f0 50%,
          #e6f7ff 100%
        );
        min-height: 100vh;
        padding: 30px;
      }

      h1 {
        text-align: center;
        font-size: 2rem;
        color: #2c3e50;
        margin-bottom: 10px;
      }

      h3 {
        text-align: center;
        font-weight: 500;
        color: #7f8c8d;
        margin-bottom: 25px;
      }

      .summary {
        text-align: center;
        background: rgba(255, 255, 255, 0.95);
        padding: 15px 25px;
        border-radius: 15px;
        display: inline-block;
        margin: 0 auto 30px;
        box-shadow: 0 5px 20px rgba(255, 107, 157, 0.15);
      }

      .summary h2 {
        font-size: 1.4rem;
        margin-bottom: 5px;
      }

      .summary .sale {
        color: #27ae60;
        font-weight: 700;
      }

      .summary .profit {
        color: #ff6b9d;
        font-weight: 700;
      }

      .export-btn {
        display: inline-block;
        margin-top: 15px;
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
        color: white;
        padding: 10px 20px;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
      }

      .export-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(78, 205, 196, 0.3);
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background: white;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
      }

      th,
      td {
        padding: 12px 15px;
        text-align: center;
        border-bottom: 1px solid #eee;
      }

      th {
        background: linear-gradient(135deg, #ff6b9d, #ffa94d);
        color: white;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      tr:hover {
        background: #fff5f7;
        cursor: pointer;
        transition: 0.3s;
      }

      td {
        color: #2c3e50;
      }

      .action-btns {
        display: flex;
        justify-content: center;
        gap: 10px;
      }

      .edit-btn,
      .delete-btn {
        padding: 6px 12px;
        border-radius: 8px;
        border: none;
        font-weight: 600;
        cursor: pointer;
        font-size: 0.85rem;
        transition: 0.3s;
      }

      .edit-btn {
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
        color: #fff;
      }

      .delete-btn {
        background: linear-gradient(135deg, #ff6b9d, #ffa94d);
        color: #fff;
      }

      .edit-btn:hover {
        box-shadow: 0 4px 10px rgba(78, 205, 196, 0.4);
        transform: translateY(-2px);
      }

      .delete-btn:hover {
        box-shadow: 0 4px 10px rgba(255, 107, 157, 0.4);
        transform: translateY(-2px);
      }

      .no-data {
        text-align: center;
        padding: 20px;
        font-size: 1.2rem;
        color: #888;
      }

      .back-btn {
        display: inline-block;
        margin: 30px auto;
        text-align: center;
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
        color: white;
        padding: 12px 30px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
      }

      .back-btn:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(78, 205, 196, 0.3);
      }

      .footer {
        text-align: center;
        color: #7f8c8d;
        margin-top: 40px;
        font-size: 0.9rem;
      }

      @media (max-width: 768px) {
        th,
        td {
          font-size: 0.9rem;
        }
        h1 {
          font-size: 1.6rem;
        }
      }
    </style>
  </head>

  <body>
    <h1>üìÖ Sales Report</h1>
    <h3>From <strong><%= from %></strong> to <strong><%= to %></strong></h3>

    <div class="summary">
      <h2 class="sale">Total Sale: ‚Çπ <%= total.toFixed(2) %></h2>
      <h2 class="profit">Total Profit: ‚Çπ <%= totalProfit.toFixed(2) %></h2>
      <a href="#" class="export-btn" onclick="downloadExcel()"
        >‚¨áÔ∏è Download Excel</a
      >
    </div>

    <% if (sales.length > 0) { %>
    <table id="salesTable">
      <thead>
        <tr>
          <th>Bill No</th>
          <th>Date</th>
          <th>Customer</th>
          <th>Total Amount (‚Çπ)</th>
          <th>Profit (‚Çπ)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% sales.forEach(s => { %>
        <tr data-id="<%= s._id %>">
          <td><%= s.billNumber || 'N/A' %></td>
          <td><%= new Date(s.createdAt).toLocaleDateString('en-IN') %></td>
          <td><%= s.customer ? s.customer.name : 'Walk-in Customer' %></td>
          <td><%= s.totalAmount.toFixed(2) %></td>
          <td><%= s.profit ? s.profit.toFixed(2) : '0.00' %></td>
          <td>
            <div class="action-btns">
              <button
                class="edit-btn"
                onclick="event.stopPropagation(); window.location.href='/billing/edit/<%= s._id %>?view=range&from=<%= from %>&to=<%= to %>'"
              >
                ‚úèÔ∏è Edit
              </button>

              <form
                action="/sales/<%= s._id %>?_method=DELETE&view=range&from=<%= from %>&to=<%= to %>"
                method="POST"
                style="display: inline"
                onsubmit="event.stopPropagation(); return confirm('‚ö†Ô∏è Are you sure you want to delete this bill? This action cannot be undone!');"
              >
                <button type="submit" class="delete-btn">üóëÔ∏è Delete</button>
              </form>
            </div>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } else { %>
    <div class="no-data">No sales found for this date range.</div>
    <% } %>

    <div style="text-align: center">
      <a href="/dashboard" class="back-btn">‚Üê Back to Dashboard</a>
    </div>

    <div class="footer">
      ¬© 2025 1stChoice ERP ‚Äî Your smart business partner üíº
    </div>

    <script>
      // ‚úÖ Row click opens bill only if you click on the row itself (not buttons/forms)
      document.querySelectorAll("tbody tr").forEach((row) => {
        row.addEventListener("click", (e) => {
          // Ignore clicks on buttons, forms, or links
          if (
            e.target.closest("button") ||
            e.target.closest("form") ||
            e.target.closest("a")
          ) {
            e.stopPropagation();
            return;
          }

          const id = row.dataset.id;
          if (id) {
            window.open(`/billing/print/${id}?from=report`, "_blank");
          }
        });
      });

      // ‚úÖ Excel Export
      function downloadExcel() {
        const table = document.getElementById("salesTable");
        if (!table) return alert("No data to export!");

        let csv = [];
        const rows = table.querySelectorAll("tr");
        for (const row of rows) {
          const cols = row.querySelectorAll("th, td");
          const rowData = Array.from(cols)
            .map((col) => `"${col.innerText}"`)
            .join(",");
          csv.push(rowData);
        }

        const csvString = csv.join("\n");
        const blob = new Blob([csvString], { type: "text/csv" });
        const link = document.createElement("a");
        link.href = URL.createObjectURL(blob);
        link.download = `Sales_Report_<%= from %>_to_<%= to %>.csv`;
        link.click();
      }
    </script>
  </body>
</html>
