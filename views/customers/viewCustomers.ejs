<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Customers | 1stChoice ERP</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #fff5e6, #ffe8f0, #e6f7ff);
        min-height: 100vh;
      }

      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        padding: 20px 50px;
        background: rgba(255, 255, 255, 0.95);
        box-shadow: 0 5px 20px rgba(255, 107, 157, 0.15);
        gap: 15px;
      }

      .navbar h1 {
        font-size: 1.6rem;
        font-weight: 800;
        background: linear-gradient(135deg, #ff6b9d, #ffa94d, #4ecdc4);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .navbar-right {
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: wrap;
      }

      .download-btn {
        padding: 10px 18px;
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
        color: white;
        border-radius: 10px;
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
        border: none;
        cursor: pointer;
      }

      .download-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(78, 205, 196, 0.4);
      }

      .search-box {
        padding: 10px 14px;
        border: 2px solid #ffa94d;
        border-radius: 10px;
        font-size: 0.95rem;
        outline: none;
        width: 220px;
        transition: 0.3s;
      }

      .search-box:focus {
        border-color: #ff6b9d;
        box-shadow: 0 0 8px rgba(255, 107, 157, 0.4);
      }

      table {
        width: 90%;
        margin: 40px auto;
        border-collapse: collapse;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        border-radius: 12px;
        overflow: hidden;
      }

      th {
        background: linear-gradient(135deg, #ff6b9d, #ffa94d);
        color: white;
        padding: 15px;
      }

      td {
        text-align: center;
        padding: 12px;
        background: #fff;
      }

      tr:nth-child(even) {
        background: #f9f9f9;
      }

      .action-btn {
        padding: 8px 14px;
        border-radius: 8px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: 0.3s;
        margin: 2px;
      }

      .edit-btn {
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
        color: white;
      }

      .delete-btn {
        background: linear-gradient(135deg, #ff6b9d, #ffa94d);
        color: white;
      }

      .action-btn:hover {
        transform: translateY(-2px);
      }

      a.back {
        display: block;
        text-align: center;
        width: 150px;
        margin: 30px auto;
        text-decoration: none;
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
        padding: 10px 15px;
        color: white;
        font-weight: 600;
        border-radius: 10px;
      }

      @media (max-width: 768px) {
        .navbar {
          flex-direction: column;
          align-items: flex-start;
          padding: 15px;
        }

        .navbar-right {
          width: 100%;
          justify-content: center;
        }

        table {
          width: 100%;
          font-size: 0.9rem;
        }

        th,
        td {
          padding: 10px;
        }

        .search-box {
          width: 100%;
        }
      }
    </style>
  </head>

  <body>
    <nav class="navbar">
      <h1>üë• All Customers</h1>
      <div class="navbar-right">
        <input
          type="text"
          id="searchInput"
          class="search-box"
          placeholder="üîç Search by Phone..."
          onkeyup="searchCustomer()"
        />
        <button class="download-btn" onclick="downloadExcel()">
          ‚¨áÔ∏è Download Excel
        </button>
        <a
          href="/dashboard"
          class="back"
          style="display: inline-block; margin: 0 10px"
          >‚Üê Back</a
        >
      </div>
    </nav>

    <% if (customers.length === 0) { %>
    <h3 style="text-align: center; margin-top: 40px">No customers found.</h3>
    <% } else { %>
    <table id="customerTable">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Phone</th>
          <th>Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% customers.forEach((cust, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= cust.name %></td>
          <td><%= cust.phone %></td>
          <td><%= cust.address || '‚Äî' %></td>
          <td>
            <a href="/customers/<%= cust._id %>/edit">
              <button class="action-btn edit-btn">‚úèÔ∏è Edit</button>
            </a>
            <form
              action="/customers/<%= cust._id %>?_method=DELETE"
              method="POST"
              style="display: inline"
            >
              <button
                class="action-btn delete-btn"
                type="submit"
                onclick="return confirm('Are you sure you want to delete this customer?');"
              >
                üóëÔ∏è Delete
              </button>
            </form>
          </td>
        </tr>
        <% }) %>
      </tbody>
    </table>
    <% } %>

    <script>
      function searchCustomer() {
        const input = document
          .getElementById("searchInput")
          .value.toLowerCase();
        const rows = document.querySelectorAll("#customerTable tbody tr");

        rows.forEach((row) => {
          const phone = row.cells[2].innerText.toLowerCase();
          row.style.display = phone.includes(input) ? "" : "none";
        });
      }

      function downloadExcel() {
        const table = document.getElementById("customerTable");
        if (!table) return alert("No customer data available!");

        let csv = [];
        const rows = table.querySelectorAll("tr");
        for (const row of rows) {
          const cols = row.querySelectorAll("th, td");
          const rowData = Array.from(cols)
            .slice(0, 4)
            .map((col) => `"${col.innerText.replace(/"/g, '""')}"`)
            .join(",");
          csv.push(rowData);
        }

        const csvString = csv.join("\n");
        const blob = new Blob([csvString], { type: "text/csv" });
        const link = document.createElement("a");
        link.href = URL.createObjectURL(blob);
        link.download = "Customer_List_1stChoice.csv";
        link.click();
      }
    </script>
  </body>
</html>
