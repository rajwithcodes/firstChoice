<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>firstChoice-ERP</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800&display=swap"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(
          135deg,
          #fff5e6 0%,
          #ffe8f0 50%,
          #e6f7ff 100%
        );
        color: #2c3e50;
        overflow-x: hidden;
        position: relative;
      }

      .bg-animation {
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 0;
        overflow: hidden;
      }

      .confetti {
        position: absolute;
        width: 15px;
        height: 15px;
        border-radius: 50%;
        animation: fall 8s infinite ease-in-out;
        box-shadow: 0 0 20px currentColor;
      }

      .confetti:nth-child(1) {
        background: #ff6b9d;
        left: 10%;
        animation-delay: 0s;
      }
      .confetti:nth-child(2) {
        background: #ffa94d;
        left: 20%;
        animation-delay: 1s;
      }
      .confetti:nth-child(3) {
        background: #4ecdc4;
        left: 30%;
        animation-delay: 2s;
      }
      .confetti:nth-child(4) {
        background: #95e1d3;
        left: 40%;
        animation-delay: 0.5s;
      }
      .confetti:nth-child(5) {
        background: #ffd93d;
        left: 50%;
        animation-delay: 1.5s;
      }
      .confetti:nth-child(6) {
        background: #ff6b9d;
        left: 60%;
        animation-delay: 2.5s;
      }
      .confetti:nth-child(7) {
        background: #6bcb77;
        left: 70%;
        animation-delay: 0.8s;
      }
      .confetti:nth-child(8) {
        background: #4ecdc4;
        left: 80%;
        animation-delay: 1.8s;
      }
      .confetti:nth-child(9) {
        background: #ffa94d;
        left: 90%;
        animation-delay: 2.2s;
      }

      .floating-shapes {
        position: absolute;
        width: 100%;
        height: 100%;
      }

      .shape {
        position: absolute;
        opacity: 0.1;
        animation: float 20s infinite ease-in-out;
      }

      .shape:nth-child(1) {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #ff6b9d, #ffa94d);
        border-radius: 30% 70% 70% 30% / 30% 30% 70% 70%;
        top: 10%;
        left: 10%;
        animation-delay: 0s;
      }

      .shape:nth-child(2) {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
        border-radius: 70% 30% 30% 70% / 70% 70% 30% 30%;
        top: 60%;
        right: 10%;
        animation-delay: 3s;
      }

      .shape:nth-child(3) {
        width: 100px;
        height: 100px;
        background: linear-gradient(135deg, #ffd93d, #ffa94d);
        border-radius: 50% 50% 30% 70% / 50% 30% 70% 50%;
        bottom: 20%;
        left: 15%;
        animation-delay: 6s;
      }

      @keyframes float {
        0%,
        100% {
          transform: translate(0, 0) rotate(0deg) scale(1);
        }
        25% {
          transform: translate(30px, -30px) rotate(90deg) scale(1.1);
        }
        50% {
          transform: translate(-20px, 20px) rotate(180deg) scale(0.9);
        }
        75% {
          transform: translate(40px, 10px) rotate(270deg) scale(1.05);
        }
      }

      @keyframes fall {
        0% {
          transform: translateY(-10vh) rotate(0deg);
          opacity: 1;
        }
        100% {
          transform: translateY(110vh) rotate(360deg);
          opacity: 0.3;
        }
      }

      .container {
        position: relative;
        z-index: 1;
        max-width: 1400px;
        margin: 0 auto;
        padding: 20px;
      }

      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 30px 40px;
        animation: slideDown 0.8s ease;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(20px);
        border-radius: 25px;
        margin-bottom: 40px;
        box-shadow: 0 15px 50px rgba(255, 107, 157, 0.15);
        border: 1px solid rgba(255, 255, 255, 0.5);
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .navbar:hover {
        box-shadow: 0 20px 60px rgba(255, 107, 157, 0.25);
        transform: translateY(-2px);
      }

      .logo-section {
        display: flex;
        align-items: center;
        gap: 20px;
      }

      .made-by {
        font-size: 0.95rem;
        color: #5d6d7e;
        font-weight: 500;
        transition: all 0.3s ease;
        animation: fadeInSlide 1s ease 0.5s both;
      }

      .made-by:hover {
        color: #ff6b9d;
        transform: scale(1.05);
      }

      .logo {
        width: 80px;
        height: 80px;
        border-radius: 22px;
        box-shadow: 0 15px 40px rgba(255, 107, 157, 0.4);
        object-fit: cover;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        border: 4px solid #fff;
        animation: logoPulse 3s ease-in-out infinite;
      }

      @keyframes logoPulse {
        0%,
        100% {
          box-shadow: 0 15px 40px rgba(255, 107, 157, 0.4);
        }
        50% {
          box-shadow: 0 15px 50px rgba(255, 107, 157, 0.6),
            0 0 30px rgba(255, 107, 157, 0.3);
        }
      }

      .logo:hover {
        transform: scale(1.1) rotate(8deg);
        box-shadow: 0 20px 50px rgba(255, 107, 157, 0.6);
      }

      .brand-name {
        font-size: 2rem;
        font-weight: 800;
        background: linear-gradient(
          135deg,
          #ff6b9d,
          #ffa94d,
          #ffd93d,
          #6bcb77,
          #4ecdc4
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        background-size: 200% 200%;
        animation: gradientFlow 4s ease infinite;
        position: relative;
      }

      .brand-name::after {
        content: "1stChoice";
        position: absolute;
        left: 0;
        top: 0;
        filter: blur(15px);
        opacity: 0.3;
        animation: gradientFlow 4s ease infinite;
      }

      @keyframes gradientFlow {
        0%,
        100% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
      }

      .hero {
        text-align: center;
        padding: 80px 40px;
        animation: fadeInUp 1s ease;
        position: relative;
      }

      .hero::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 600px;
        height: 600px;
        background: radial-gradient(
          circle,
          rgba(255, 107, 157, 0.1) 0%,
          transparent 70%
        );
        animation: pulse 4s ease-in-out infinite;
        pointer-events: none;
      }

      @keyframes pulse {
        0%,
        100% {
          transform: translate(-50%, -50%) scale(1);
          opacity: 0.5;
        }
        50% {
          transform: translate(-50%, -50%) scale(1.2);
          opacity: 0.8;
        }
      }

      .hero h1 {
        font-size: 5rem;
        font-weight: 800;
        line-height: 1.2;
        margin-bottom: 20px;
        background: linear-gradient(
          135deg,
          #ff6b9d,
          #ffa94d,
          #ffd93d,
          #6bcb77,
          #4ecdc4
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        animation: colorShift 3s ease-in-out infinite;
        background-size: 200% 200%;
        position: relative;
        z-index: 1;
        filter: drop-shadow(0 4px 15px rgba(255, 107, 157, 0.3));
      }

      .hero h1 span {
        display: block;
        font-size: 3rem;
        font-weight: 300;
        background: linear-gradient(135deg, #7f8c8d, #95a5a6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-top: 10px;
        animation: fadeInSlide 1s ease 0.3s both;
      }

      @keyframes fadeInSlide {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .hero p {
        font-size: 1.4rem;
        color: #5d6d7e;
        max-width: 700px;
        margin: 0 auto 40px;
        font-weight: 400;
        line-height: 1.8;
        animation: fadeInSlide 1s ease 0.5s both;
      }

      @keyframes colorShift {
        0%,
        100% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
      }

      .cta-buttons {
        display: flex;
        gap: 20px;
        justify-content: center;
        flex-wrap: wrap;
        animation: fadeInSlide 1s ease 0.7s both;
      }

      .btn {
        padding: 18px 45px;
        border-radius: 50px;
        font-size: 1.1rem;
        font-weight: 600;
        text-decoration: none;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        border: none;
        font-family: "Poppins", sans-serif;
        position: relative;
        overflow: hidden;
      }

      .btn::before {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transition: width 0.6s, height 0.6s, top 0.6s, left 0.6s;
        transform: translate(-50%, -50%);
      }

      .btn:hover::before {
        width: 300px;
        height: 300px;
      }

      .btn-primary {
        background: linear-gradient(135deg, #ff6b9d, #ffa94d);
        color: #fff;
        box-shadow: 0 15px 40px rgba(255, 107, 157, 0.4);
      }

      .btn-primary:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px rgba(255, 107, 157, 0.6);
      }

      .btn-secondary {
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
        color: #fff;
        box-shadow: 0 15px 40px rgba(78, 205, 196, 0.4);
      }

      .btn-secondary:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 50px rgba(78, 205, 196, 0.6);
      }

      .stats-section {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 30px;
        padding: 60px 40px;
        text-align: center;
      }

      .stat-item {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(20px);
        padding: 40px 30px;
        border-radius: 25px;
        box-shadow: 0 15px 50px rgba(78, 205, 196, 0.15);
        animation: fadeInUp 1s ease;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        border: 3px solid transparent;
        position: relative;
        overflow: hidden;
      }

      .stat-item::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
          45deg,
          transparent,
          rgba(255, 255, 255, 0.3),
          transparent
        );
        transform: rotate(45deg);
        transition: all 0.6s;
      }

      .stat-item:hover::before {
        left: 100%;
      }

      .stat-item:nth-child(1) {
        border-color: #ff6b9d;
        animation-delay: 0.1s;
      }
      .stat-item:nth-child(2) {
        border-color: #ffa94d;
        animation-delay: 0.2s;
      }
      .stat-item:nth-child(3) {
        border-color: #6bcb77;
        animation-delay: 0.3s;
      }
      .stat-item:nth-child(4) {
        border-color: #4ecdc4;
        animation-delay: 0.4s;
      }

      .stat-item:hover {
        transform: translateY(-15px) scale(1.05);
        box-shadow: 0 25px 60px rgba(78, 205, 196, 0.3);
      }

      .stat-number {
        font-size: 3.5rem;
        font-weight: 800;
        margin-bottom: 10px;
        transition: all 0.4s ease;
      }

      .stat-item:hover .stat-number {
        transform: scale(1.1);
      }

      .stat-item:nth-child(1) .stat-number {
        background: linear-gradient(135deg, #ff6b9d, #ff8fb3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .stat-item:nth-child(2) .stat-number {
        background: linear-gradient(135deg, #ffa94d, #ffbe76);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .stat-item:nth-child(3) .stat-number {
        background: linear-gradient(135deg, #6bcb77, #8fdb95);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .stat-item:nth-child(4) .stat-number {
        background: linear-gradient(135deg, #4ecdc4, #73d9d1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .stat-label {
        color: #5d6d7e;
        font-size: 1.1rem;
        font-weight: 500;
        transition: color 0.3s ease;
      }

      .stat-item:hover .stat-label {
        color: #2c3e50;
      }

      .features-section {
        padding: 60px 40px;
        animation: fadeInUp 1s ease 0.3s both;
      }

      .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 35px;
        margin-top: 40px;
      }

      .feature-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border-radius: 30px;
        padding: 45px;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.08);
        border: 2px solid rgba(255, 255, 255, 0.5);
      }

      .feature-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 6px;
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      }

      .feature-card::after {
        content: "";
        position: absolute;
        top: 50%;
        left: 50%;
        width: 0;
        height: 0;
        border-radius: 50%;
        transform: translate(-50%, -50%);
        transition: width 0.6s, height 0.6s;
        opacity: 0.05;
      }

      .feature-card:nth-child(1)::before {
        background: linear-gradient(90deg, #ff6b9d, #ffa94d);
      }
      .feature-card:nth-child(1)::after {
        background: linear-gradient(135deg, #ff6b9d, #ffa94d);
      }
      .feature-card:nth-child(2)::before {
        background: linear-gradient(90deg, #ffd93d, #6bcb77);
      }
      .feature-card:nth-child(2)::after {
        background: linear-gradient(135deg, #ffd93d, #6bcb77);
      }
      .feature-card:nth-child(3)::before {
        background: linear-gradient(90deg, #4ecdc4, #95e1d3);
      }
      .feature-card:nth-child(3)::after {
        background: linear-gradient(135deg, #4ecdc4, #95e1d3);
      }
      .feature-card:nth-child(4)::before {
        background: linear-gradient(90deg, #ffa94d, #ffd93d);
      }
      .feature-card:nth-child(4)::after {
        background: linear-gradient(135deg, #ffa94d, #ffd93d);
      }
      .feature-card:nth-child(5)::before {
        background: linear-gradient(90deg, #6bcb77, #4ecdc4);
      }
      .feature-card:nth-child(5)::after {
        background: linear-gradient(135deg, #6bcb77, #4ecdc4);
      }
      .feature-card:nth-child(6)::before {
        background: linear-gradient(90deg, #ff6b9d, #4ecdc4);
      }
      .feature-card:nth-child(6)::after {
        background: linear-gradient(135deg, #ff6b9d, #4ecdc4);
      }

      .feature-card:hover {
        transform: translateY(-15px) scale(1.02);
        box-shadow: 0 30px 70px rgba(255, 107, 157, 0.25);
      }

      .feature-card:hover::before {
        height: 100%;
      }

      .feature-card:hover::after {
        width: 600px;
        height: 600px;
      }

      .feature-icon {
        font-size: 3.5rem;
        margin-bottom: 25px;
        filter: drop-shadow(0 8px 20px rgba(255, 107, 157, 0.4));
        transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        display: inline-block;
      }

      .feature-card:hover .feature-icon {
        transform: scale(1.2) rotateY(360deg);
        filter: drop-shadow(0 10px 25px rgba(255, 107, 157, 0.6));
      }

      .feature-title {
        font-size: 1.6rem;
        font-weight: 700;
        margin-bottom: 15px;
        color: #2c3e50;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
      }

      .feature-card:nth-child(1) .feature-title {
        color: #ff6b9d;
      }
      .feature-card:nth-child(2) .feature-title {
        color: #ffa94d;
      }
      .feature-card:nth-child(3) .feature-title {
        color: #4ecdc4;
      }
      .feature-card:nth-child(4) .feature-title {
        color: #ffd93d;
      }
      .feature-card:nth-child(5) .feature-title {
        color: #6bcb77;
      }
      .feature-card:nth-child(6) .feature-title {
        color: #ff6b9d;
      }

      .feature-desc {
        color: #5d6d7e;
        line-height: 1.8;
        font-weight: 400;
        transition: all 0.3s ease;
        position: relative;
        z-index: 1;
      }

      .feature-card:hover .feature-desc {
        color: #2c3e50;
      }

      .footer {
        text-align: center;
        padding: 50px 40px;
        margin-top: 60px;
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(20px);
        border-radius: 25px;
        color: #5d6d7e;
        font-weight: 400;
        box-shadow: 0 15px 50px rgba(255, 107, 157, 0.1);
        transition: all 0.4s ease;
        border: 1px solid rgba(255, 255, 255, 0.5);
      }

      .footer:hover {
        box-shadow: 0 20px 60px rgba(255, 107, 157, 0.2);
        transform: translateY(-3px);
      }

      @keyframes slideDown {
        from {
          opacity: 0;
          transform: translateY(-40px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @media (max-width: 768px) {
        .hero h1 {
          font-size: 3rem;
        }

        .hero h1 span {
          font-size: 2rem;
        }

        .hero p {
          font-size: 1.1rem;
        }

        .features-grid {
          grid-template-columns: 1fr;
        }

        .navbar {
          flex-direction: column;
          gap: 20px;
        }

        .made-by {
          font-size: 0.85rem;
        }

        .hero::before {
          width: 300px;
          height: 300px;
        }
      }

      @media (prefers-reduced-motion: reduce) {
        *,
        *::before,
        *::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
        }
      }
    </style>
  </head>
