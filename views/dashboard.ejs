<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Dashboard | 1stChoice ERP</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <!-- html2canvas + jsPDF for PDF export -->
    <script src="https://cdn.jsdelivr.net/npm/html2canvas@1.4.1/dist/html2canvas.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jspdf@2.5.1/dist/jspdf.umd.min.js"></script>

    <style>
      /* ======= KEEP ALL ORIGINAL CSS FROM YOUR PROVIDED FILE ======= */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(
          135deg,
          #fff5e6 0%,
          #ffe8f0 50%,
          #e6f7ff 100%
        );
        min-height: 100vh;
        position: relative;
        overflow-x: hidden;
      }

      .bg-animation {
        position: fixed;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        z-index: 0;
        overflow: hidden;
        pointer-events: none;
      }

      .confetti {
        position: absolute;
        width: 12px;
        height: 12px;
        border-radius: 50%;
        animation: fall 10s infinite ease-in-out;
        opacity: 0.6;
      }

      .confetti:nth-child(1) {
        background: #ff6b9d;
        left: 5%;
        animation-delay: 0s;
      }
      .confetti:nth-child(2) {
        background: #ffa94d;
        left: 15%;
        animation-delay: 1.5s;
      }
      .confetti:nth-child(3) {
        background: #4ecdc4;
        left: 25%;
        animation-delay: 3s;
      }
      .confetti:nth-child(4) {
        background: #6bcb77;
        left: 35%;
        animation-delay: 0.8s;
      }
      .confetti:nth-child(5) {
        background: #ffd93d;
        left: 45%;
        animation-delay: 2s;
      }
      .confetti:nth-child(6) {
        background: #ff6b9d;
        left: 55%;
        animation-delay: 2.7s;
      }
      .confetti:nth-child(7) {
        background: #4ecdc4;
        left: 65%;
        animation-delay: 1.2s;
      }
      .confetti:nth-child(8) {
        background: #ffa94d;
        left: 75%;
        animation-delay: 3.5s;
      }
      .confetti:nth-child(9) {
        background: #6bcb77;
        left: 85%;
        animation-delay: 0.3s;
      }
      .confetti:nth-child(10) {
        background: #ffd93d;
        left: 95%;
        animation-delay: 1.8s;
      }

      @keyframes fall {
        0% {
          transform: translateY(-10vh) rotate(0deg);
          opacity: 0.8;
        }
        100% {
          transform: translateY(110vh) rotate(360deg);
          opacity: 0.2;
        }
      }

      .navbar {
        position: relative;
        z-index: 10;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 50px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        box-shadow: 0 5px 20px rgba(255, 107, 157, 0.15);
        animation: slideDown 0.6s ease;
      }

      .navbar-left {
        display: flex;
        align-items: center;
        gap: 20px;
      }

      .navbar-logo {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid #fff;
        box-shadow: 0 5px 15px rgba(255, 107, 157, 0.3);
        transition: all 0.3s ease;
      }

      .navbar-logo:hover {
        transform: scale(1.05);
        box-shadow: 0 8px 20px rgba(255, 107, 157, 0.5);
      }

      .navbar h1 {
        font-size: 1.8rem;
        font-weight: 800;
        background: linear-gradient(
          135deg,
          #ff6b9d,
          #ffa94d,
          #ffd93d,
          #6bcb77,
          #4ecdc4
        );
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
      }

      .navbar a {
        padding: 12px 30px;
        background: linear-gradient(135deg, #ff6b9d, #ffa94d);
        color: white;
        text-decoration: none;
        border-radius: 25px;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(255, 107, 157, 0.3);
      }

      .navbar a:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(255, 107, 157, 0.5);
      }

      .dashboard-container {
        position: relative;
        z-index: 1;
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
      }

      .welcome-section {
        text-align: center;
        margin-bottom: 50px;
        animation: fadeInUp 0.8s ease 0.2s both;
      }

      .welcome-section h2 {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
      }

      .welcome-section p {
        font-size: 1.1rem;
        color: #7f8c8d;
        font-weight: 300;
      }

      .actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-bottom: 60px;
        animation: fadeInUp 0.8s ease 0.4s both;
      }

      .btn {
        padding: 20px 30px;
        text-align: center;
        text-decoration: none;
        border-radius: 15px;
        font-size: 1.1rem;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        color: white;
      }

      .btn-primary {
        background: linear-gradient(135deg, #ff6b9d, #ffa94d);
      }

      .btn-primary:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 35px rgba(255, 107, 157, 0.4);
      }

      .btn-secondary {
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
      }

      .btn-secondary:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 35px rgba(78, 205, 196, 0.4);
      }

      .sales-report {
        margin-bottom: 50px;
        text-align: center;
        animation: fadeInUp 0.8s ease 0.6s both;
      }

      .sales-report h2 {
        font-size: 2rem;
        margin-bottom: 30px;
        color: #2c3e50;
        font-weight: 700;
      }

      .report-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
      }

      .report-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: all 0.4s ease;
        border: 3px solid transparent;
        position: relative;
        overflow: hidden;
        cursor: pointer;
      }

      .report-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        transition: height 0.4s ease;
      }

      .report-card:nth-child(1) {
        border-color: #ff6b9d;
      }

      .report-card:nth-child(1)::before {
        background: linear-gradient(90deg, #ff6b9d, #ffa94d);
      }

      .report-card:nth-child(2) {
        border-color: #4ecdc4;
      }

      .report-card:nth-child(2)::before {
        background: linear-gradient(90deg, #4ecdc4, #6bcb77);
      }

      .report-card:nth-child(3) {
        border-color: #ffd93d;
      }

      .report-card:nth-child(3)::before {
        background: linear-gradient(90deg, #ffa94d, #ffd93d);
      }

      .report-card:nth-child(4) {
        border-color: #6bcb77;
      }

      .report-card:nth-child(4)::before {
        background: linear-gradient(90deg, #6bcb77, #4ecdc4);
      }

      .report-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 50px rgba(255, 107, 157, 0.2);
      }

      .report-card:hover::before {
        height: 100%;
        opacity: 0.1;
      }

      .report-card h3 {
        font-size: 1.1rem;
        color: #7f8c8d;
        margin-bottom: 15px;
        font-weight: 500;
      }

      .report-card p {
        font-size: 2.5rem;
        font-weight: 800;
        color: #27ae60;
      }

      .report-card:nth-child(1) p {
        background: linear-gradient(135deg, #ff6b9d, #ff8fb3);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .report-card:nth-child(2) p {
        background: linear-gradient(135deg, #4ecdc4, #73d9d1);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .report-card:nth-child(3) p {
        background: linear-gradient(135deg, #ffa94d, #ffbe76);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .report-card:nth-child(4) p {
        background: linear-gradient(135deg, #6bcb77, #8fdb95);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
      }

      .range-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 25px;
        padding: 40px;
        margin-top: 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        text-align: center;
        transition: all 0.3s ease;
        border: 3px solid #ff6b9d;
        position: relative;
        overflow: hidden;
        animation: fadeInUp 0.8s ease 0.8s both;
      }

      .range-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 5px;
        background: linear-gradient(
          90deg,
          #ff6b9d,
          #ffa94d,
          #ffd93d,
          #6bcb77,
          #4ecdc4
        );
      }

      .range-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 30px rgba(255, 107, 157, 0.25);
      }

      .range-card h2 {
        font-size: 1.8rem;
        margin-bottom: 25px;
        color: #2c3e50;
        font-weight: 700;
      }

      .date-inputs {
        display: flex;
        justify-content: center;
        gap: 15px;
        flex-wrap: wrap;
        margin-bottom: 20px;
      }

      input[type="date"] {
        padding: 12px 20px;
        border-radius: 12px;
        border: 2px solid #e0e0e0;
        font-size: 1rem;
        font-family: "Poppins", sans-serif;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.8);
      }

      input[type="date"]:focus {
        outline: none;
        border-color: #ffa94d;
        box-shadow: 0 5px 15px rgba(255, 169, 77, 0.2);
      }

      .check-btn {
        background: linear-gradient(135deg, #4ecdc4, #6bcb77);
        color: white;
        padding: 12px 30px;
        border-radius: 12px;
        border: none;
        cursor: pointer;
        font-weight: 600;
        font-size: 1rem;
        font-family: "Poppins", sans-serif;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(78, 205, 196, 0.3);
      }

      .check-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(78, 205, 196, 0.5);
      }

      footer {
        text-align: center;
        padding: 40px;
        margin-top: 60px;
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        border-radius: 20px;
        color: #7f8c8d;
        font-weight: 400;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        animation: fadeInUp 0.8s ease 1s both;
      }

      /* ===== ADDED: Analytics modal styles ===== */
      .analytics-modal {
        position: fixed;
        inset: 0;
        display: none;
        z-index: 9999;
        align-items: center;
        justify-content: center;
        background: rgba(0, 0, 0, 0.45);
      }

      .analytics-panel {
        width: 95%;
        max-width: 1200px;
        background: #fff;
        border-radius: 14px;
        padding: 18px;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.25);
        overflow: auto;
        max-height: 90vh;
      }

      .analytics-header {
        display: flex;
        gap: 12px;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 12px;
      }

      .analytics-controls {
        display: flex;
        gap: 10px;
        align-items: center;
      }

      .analytics-controls select,
      .analytics-controls button,
      .analytics-controls input {
        padding: 8px 10px;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        font-size: 0.95rem;
      }

      .analytics-body {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 18px;
      }

      .chart-card,
      .table-card {
        background: #fafafa;
        border-radius: 10px;
        padding: 12px;
      }

      .analytics-footer {
        margin-top: 14px;
        display: flex;
        gap: 10px;
        justify-content: flex-end;
        align-items: center;
      }

      .small {
        font-size: 0.85rem;
        color: #666;
      }

      .top5-table {
        width: 100%;
        border-collapse: collapse;
      }

      .top5-table th,
      .top5-table td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #eee;
      }

      .no-analytics {
        padding: 18px;
        text-align: center;
        color: #c0392b;
        font-weight: 700;
      }

      @keyframes slideDown {
        from {
          opacity: 0;
          transform: translateY(-30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInUp {
        from {
          opacity: 0;
          transform: translateY(30px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @media (max-width: 980px) {
        .analytics-body {
          grid-template-columns: 1fr;
        }
      }
    </style>
  </head>
  <body>
    <div class="bg-animation">
      <div class="confetti"></div>
      <div class="confetti"></div>
      <div class="confetti"></div>
      <div class="confetti"></div>
      <div class="confetti"></div>
      <div class="confetti"></div>
      <div class="confetti"></div>
      <div class="confetti"></div>
      <div class="confetti"></div>
      <div class="confetti"></div>
    </div>

    <nav class="navbar">
      <div class="navbar-left">
        <img src="/images/logoT.png" alt="1stChoice Logo" class="navbar-logo" />
        <h1>Dashboard</h1>
      </div>
      <div style="display: flex; gap: 12px; align-items: center">
        <a href="/">Logout</a>
        <!-- Analytics quick open button -->
        <button
          id="openAnalyticsBtn"
          style="
            padding: 10px 14px;
            border-radius: 10px;
            border: none;
            background: #4ecdc4;
            color: #fff;
            cursor: pointer;
            font-weight: 600;
          "
        >
          üìà Analytics
        </button>
      </div>
    </nav>

    <div class="dashboard-container">
      <div class="welcome-section">
        <h2>Welcome Back! üëã</h2>
        <p>Here's how your shop is performing today.</p>
      </div>

      <div class="actions">
        <a href="/billing/new" class="btn btn-primary">üßæ Make Billing</a>
        <a href="/categories/new" class="btn btn-secondary">‚ûï Add Category</a>
        <a href="/categories" class="btn btn-secondary">üìÇ View Categories</a>
        <a href="/products/new" class="btn btn-primary">‚ûï Add Product</a>
        <a href="/products" class="btn btn-primary">üì¶ View Products</a>
        <a href="/customers" class="btn btn-secondary">üë• View Customers</a>
      </div>

      <section class="sales-report">
        <h2>üìä Sales & Profit Summary</h2>
        <div class="report-grid">
          <a href="/sales/today" style="text-decoration: none; color: inherit">
            <div class="report-card">
              <h3>Today's Sale</h3>
              <p>‚Çπ <%= todaySales.toFixed(2) %></p>
            </div>
          </a>

          <div class="report-card">
            <h3>This Month's Sale</h3>
            <p>‚Çπ <%= monthSales.toFixed(2) %></p>
          </div>

          <div class="report-card">
            <h3>Today's Profit</h3>
            <p>‚Çπ <%= todayProfit.toFixed(2) %></p>
          </div>

          <div class="report-card">
            <h3>This Month's Profit</h3>
            <p>‚Çπ <%= monthProfit.toFixed(2) %></p>
          </div>
        </div>
      </section>

      <!-- üìÖ Date Range Sales Card -->
      <div class="range-card">
        <h2>üìÖ Check Sale by Date Range</h2>
        <div class="date-inputs">
          <input type="date" id="fromDate" required />
          <input type="date" id="toDate" required />
          <button class="check-btn" onclick="viewRangeSales()">
            Check Sale
          </button>
        </div>
      </div>

      <footer>¬© 2025 1stChoice ERP ‚Äî Made with ‚ù§Ô∏è by rajSinghania üòâ</footer>
    </div>

    <!-- ===== Analytics Modal ===== -->
    <div id="analyticsModal" class="analytics-modal" aria-hidden="true">
      <div class="analytics-panel" role="dialog" aria-modal="true">
        <div class="analytics-header">
          <div style="display: flex; align-items: center; gap: 14px">
            <h3 style="margin: 0">Category & Product Analytics</h3>
            <span class="small"
              >View sales/profit breakdown by category and drill into
              products</span
            >
          </div>

          <div class="analytics-controls">
            <label class="small" style="margin-right: 6px">Month</label>
            <select id="analyticsMonth"></select>

            <label class="small" style="margin-left: 8px">Year</label>
            <select id="analyticsYear"></select>

            <label class="small" style="margin-left: 8px">Mode</label>
            <select id="analyticsMode">
              <option value="sales">Sales (‚Çπ)</option>
              <option value="profit">Profit (‚Çπ)</option>
            </select>

            <button id="refreshAnalytics" title="Refresh">üîÅ Refresh</button>
            <button
              id="closeAnalytics"
              title="Close"
              style="
                background: #ff6b9d;
                color: white;
                border: none;
                padding: 8px;
                border-radius: 8px;
              "
            >
              Close
            </button>
          </div>
        </div>

        <div class="analytics-body">
          <div class="chart-card">
            <h4 style="margin: 6px 0">Category Distribution</h4>
            <canvas id="catDonutChart" height="260"></canvas>
            <div
              style="display: flex; gap: 8px; margin-top: 8px; flex-wrap: wrap"
            >
              <button
                id="exportCSV"
                style="
                  padding: 8px 10px;
                  border-radius: 8px;
                  border: none;
                  background: #4ecdc4;
                  color: white;
                  cursor: pointer;
                "
              >
                ‚¨áÔ∏è Export CSV
              </button>
              <button
                id="exportPDF"
                style="
                  padding: 8px 10px;
                  border-radius: 8px;
                  border: none;
                  background: #6bcb77;
                  color: white;
                  cursor: pointer;
                "
              >
                üñ® Export PDF
              </button>
              <button
                id="monthlyCompare"
                style="
                  padding: 8px 10px;
                  border-radius: 8px;
                  border: none;
                  background: #ffa94d;
                  color: white;
                  cursor: pointer;
                "
              >
                üìÖ Compare Months
              </button>
            </div>
            <div
              id="donutLegend"
              style="margin-top: 10px; font-size: 0.9rem; color: #333"
            ></div>
          </div>

          <div class="table-card">
            <h4 style="margin: 6px 0">Top Categories & Product Breakdown</h4>
            <div id="analyticsInfo">
              <div
                id="noAnalyticsMsg"
                class="no-analytics"
                style="display: none"
              >
                ‚ö†Ô∏è No analytics data found for this month!
              </div>

              <div id="top5Section" style="display: none">
                <table class="top5-table" id="top5Table">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Category</th>
                      <th><span id="modeLabel">Sale (‚Çπ)</span></th>
                      <th>Top products</th>
                    </tr>
                  </thead>
                  <tbody id="top5Body"></tbody>
                </table>
                <hr />
                <h4 style="margin: 8px 0">Selected Category ‚Äî Product Sales</h4>
                <canvas id="prodBarChart" height="240"></canvas>
                <div id="categoryReview" style="margin-top: 12px"></div>
              </div>
            </div>
          </div>
        </div>

        <div class="analytics-footer">
          <small class="small"
            >Tip: click a donut slice to drill into products.</small
          >
        </div>
      </div>
    </div>

    <script>
      // ===== keep existing function =====
      function viewRangeSales() {
        const from = document.getElementById("fromDate").value;
        const to = document.getElementById("toDate").value;
        if (!from || !to) {
          alert("Please select both dates!");
          return;
        }
        window.location.href = `/sales/range?from=${from}&to=${to}`;
      }

      // ===== Analytics modal logic =====
      const analyticsModal = document.getElementById("analyticsModal");
      const openBtn = document.getElementById("openAnalyticsBtn");
      const closeBtn = document.getElementById("closeAnalytics");
      const refreshBtn = document.getElementById("refreshAnalytics");
      const exportCSVBtn = document.getElementById("exportCSV");
      const exportPDFBtn = document.getElementById("exportPDF");
      const monthlyCompareBtn = document.getElementById("monthlyCompare");
      const modeLabel = document.getElementById("modeLabel");

      // Chart instances
      let catDonutChart = null;
      let prodBarChart = null;

      // default month/year to current
      const now = new Date();
      const defaultMonth = now.getMonth() + 1; // 1-12
      const defaultYear = now.getFullYear();

      const monthSelect = document.getElementById("analyticsMonth");
      const yearSelect = document.getElementById("analyticsYear");
      const modeSelect = document.getElementById("analyticsMode");

      function populateMonthYear() {
        // months
        const months = [
          "January",
          "February",
          "March",
          "April",
          "May",
          "June",
          "July",
          "August",
          "September",
          "October",
          "November",
          "December",
        ];
        monthSelect.innerHTML = "";
        for (let i = 1; i <= 12; i++) {
          const opt = document.createElement("option");
          opt.value = i;
          opt.text = months[i - 1];
          if (i === defaultMonth) opt.selected = true;
          monthSelect.appendChild(opt);
        }
        // years (last 5 + current + next 1)
        yearSelect.innerHTML = "";
        const startY = defaultYear - 3;
        for (let y = startY; y <= defaultYear + 1; y++) {
          const opt = document.createElement("option");
          opt.value = y;
          opt.text = y;
          if (y === defaultYear) opt.selected = true;
          yearSelect.appendChild(opt);
        }
      }
      populateMonthYear();

      openBtn.addEventListener("click", () => {
        analyticsModal.style.display = "flex";
        loadAnalytics(); // load on open
      });
      closeBtn.addEventListener("click", () => {
        analyticsModal.style.display = "none";
      });
      refreshBtn.addEventListener("click", () => loadAnalytics());

      modeSelect.addEventListener("change", () => {
        modeLabel.innerText =
          modeSelect.value === "profit" ? "Profit (‚Çπ)" : "Sale (‚Çπ)";
      });

      // fetch analytics
      async function loadAnalytics() {
        const month = monthSelect.value;
        const year = yearSelect.value;
        const mode = modeSelect.value || "sales";
        // show loading state
        document.getElementById("noAnalyticsMsg").style.display = "none";
        const top5Section = document.getElementById("top5Section");
        top5Section.style.display = "none";

        try {
          const response = await fetch(
            `/api/category-analytics?month=${month}&year=${year}&mode=${mode}`
          );
          if (!response.ok)
            throw new Error("Server returned " + response.status);
          const data = await response.json();
          // expected contract:
          // { categories: [{ _id, name, value, products: [{_id,name, value}] }], total: number }
          if (
            !data ||
            !Array.isArray(data.categories) ||
            data.categories.length === 0
          ) {
            document.getElementById("noAnalyticsMsg").style.display = "block";
            if (catDonutChart) {
              catDonutChart.destroy();
              catDonutChart = null;
            }
            if (prodBarChart) {
              prodBarChart.destroy();
              prodBarChart = null;
            }
            return;
          }
          document.getElementById("noAnalyticsMsg").style.display = "none";
          top5Section.style.display = "block";

          // Draw category donut
          drawCategoryDonut(data.categories, mode);

          // Fill top 5 table
          populateTop5(data.categories.slice(0, 5), mode);
        } catch (err) {
          console.error("‚ùå Failed to load analytics.", err);
          document.getElementById("noAnalyticsMsg").innerText =
            "‚ùå Failed to load analytics. (" + err.message + ")";
          document.getElementById("noAnalyticsMsg").style.display = "block";
        }
      }

      function drawCategoryDonut(categories, mode) {
        const labels = categories.map((c) => c.name);
        const values = categories.map((c) => c.value);
        const colors = generateColors(labels.length);

        const ctx = document.getElementById("catDonutChart").getContext("2d");
        if (catDonutChart) catDonutChart.destroy();

        catDonutChart = new Chart(ctx, {
          type: "doughnut",
          data: {
            labels: labels,
            datasets: [
              {
                data: values,
                backgroundColor: colors,
                borderColor: "#fff",
                borderWidth: 2,
              },
            ],
          },
          options: {
            responsive: true,
            plugins: {
              legend: { display: false },
              tooltip: {
                callbacks: {
                  label: (ctx) => {
                    const val = ctx.raw;
                    return `${ctx.label}: ‚Çπ ${Number(val).toLocaleString()}`;
                  },
                },
              },
            },
            onClick: (evt, items) => {
              if (!items.length) return;
              const idx = items[0].index;
              const category = categories[idx];
              if (category) drawProductBar(category, mode);
            },
          },
        });

        // legend
        const legendDiv = document.getElementById("donutLegend");
        legendDiv.innerHTML = categories
          .map((c, i) => {
            return `<div style="display:inline-block;margin-right:12px">
                    <span style="display:inline-block;width:12px;height:12px;background:${
                      colors[i]
                    };border-radius:4px;margin-right:6px;vertical-align:middle"></span>
                    <strong>${escapeHtml(c.name)}</strong> ‚Äî ‚Çπ ${Number(
              c.value
            ).toLocaleString()}
                  </div>`;
          })
          .join("");
      }

      function drawProductBar(category, mode) {
        const labels = category.products.map((p) => p.name);
        const values = category.products.map((p) => p.value);
        const ctx = document.getElementById("prodBarChart").getContext("2d");
        if (prodBarChart) prodBarChart.destroy();

        prodBarChart = new Chart(ctx, {
          type: "bar",
          data: {
            labels,
            datasets: [
              {
                label: mode === "profit" ? "Profit (‚Çπ)" : "Sales (‚Çπ)",
                data: values,
                borderRadius: 6,
              },
            ],
          },
          options: {
            responsive: true,
            plugins: {
              legend: { display: false },
              tooltip: {
                callbacks: {
                  label: (ctx) =>
                    `${ctx.label}: ‚Çπ ${Number(ctx.raw).toLocaleString()}`,
                },
              },
            },
            scales: {
              y: {
                ticks: {
                  callback: (v) => "‚Çπ " + v.toLocaleString(),
                },
              },
            },
          },
        });

        // textual review
        const reviewDiv = document.getElementById("categoryReview");
        const topProducts = category.products.slice(0, 3);
        let text = `<strong>Top products in ${escapeHtml(
          category.name
        )}:</strong><br/>`;
        text += topProducts
          .map(
            (p, i) =>
              `${i + 1}. ${escapeHtml(p.name)} ‚Äî ‚Çπ ${Number(
                p.value
              ).toLocaleString()}`
          )
          .join("<br/>");
        reviewDiv.innerHTML = text;
      }

      function populateTop5(top5, mode) {
        const tbody = document.getElementById("top5Body");
        tbody.innerHTML = "";
        top5.forEach((c, idx) => {
          const productList = c.products
            .slice(0, 3)
            .map(
              (p) =>
                `${escapeHtml(p.name)} (${Number(p.value).toLocaleString()})`
            )
            .join(", ");
          const row = document.createElement("tr");
          row.innerHTML = `<td>${idx + 1}</td>
            <td>${escapeHtml(c.name)}</td>
            <td>‚Çπ ${Number(c.value).toLocaleString()}</td>
            <td>${productList}</td>`;
          row.style.cursor = "pointer";
          row.addEventListener("click", () =>
            drawProductBar(c, modeSelect.value)
          );
          tbody.appendChild(row);
        });
      }

      // Export CSV (simple)
      exportCSVBtn.addEventListener("click", () => {
        // create CSV from displayed categories
        const month = monthSelect.value;
        const year = yearSelect.value;
        const mode = modeSelect.value || "sales";
        fetch(
          `/api/category-analytics?month=${month}&year=${year}&mode=${mode}`
        )
          .then((r) => r.json())
          .then((data) => {
            if (!data || !Array.isArray(data.categories))
              return alert("No data to export");
            let csv = "Category,Value,TopProducts\\n";
            data.categories.forEach((c) => {
              const prods = (c.products || [])
                .slice(0, 5)
                .map((p) => `${p.name} (${p.value})`)
                .join(" | ");
              csv += `"${c.name}",${c.value},"${prods}"\\n`;
            });
            const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
            const url = URL.createObjectURL(blob);
            const a = document.createElement("a");
            a.href = url;
            a.download = `category_analytics_${month}_${year}_${mode}.csv`;
            document.body.appendChild(a);
            a.click();
            a.remove();
            URL.revokeObjectURL(url);
          })
          .catch((e) => {
            alert("Export failed: " + e.message);
          });
      });

      // Export PDF: capture analytics panel and create a PDF
      exportPDFBtn.addEventListener("click", async () => {
        const panel = document.querySelector(".analytics-panel");
        if (!panel) return alert("Nothing to export");
        // use html2canvas
        try {
          const canvas = await html2canvas(panel, { scale: 2 });
          const imgData = canvas.toDataURL("image/png");
          const { jsPDF } = window.jspdf;
          const pdf = new jsPDF({
            orientation: "landscape",
            unit: "px",
            format: [canvas.width, canvas.height],
          });
          pdf.addImage(imgData, "PNG", 0, 0, canvas.width, canvas.height);
          pdf.save(
            `category_analytics_${monthSelect.value}_${yearSelect.value}.pdf`
          );
        } catch (err) {
          console.error(err);
          alert("PDF export failed: " + err.message);
        }
      });

      // monthly compare quick control (opens prompt for month/year 2)
      monthlyCompareBtn.addEventListener("click", async () => {
        const monthA = monthSelect.value;
        const yearA = yearSelect.value;
        const monthB = prompt(
          "Enter month number to compare (1-12) for same or different year:"
        );
        if (!monthB) return;
        const yearB = prompt(
          "Enter year for comparison (e.g., 2025):",
          yearSelect.value
        );
        if (!yearB) return;
        // fetch both and show basic comparison in an alert (you can expand UI later)
        try {
          const mode = modeSelect.value || "sales";
          const [r1, r2] = await Promise.all([
            fetch(
              `/api/category-analytics?month=${monthA}&year=${yearA}&mode=${mode}`
            ).then((r) => r.json()),
            fetch(
              `/api/category-analytics?month=${monthB}&year=${yearB}&mode=${mode}`
            ).then((r) => r.json()),
          ]);
          const totalA = r1.total || 0;
          const totalB = r2.total || 0;
          const diff = totalB - totalA;
          alert(
            `Comparison:\\n${monthA}/${yearA}: ‚Çπ ${Number(
              totalA
            ).toLocaleString()}\\n${monthB}/${yearB}: ‚Çπ ${Number(
              totalB
            ).toLocaleString()}\\nDifference: ‚Çπ ${Number(
              diff
            ).toLocaleString()}`
          );
        } catch (err) {
          alert("Comparison failed: " + err.message);
        }
      });

      // utility: generate pastel colors
      function generateColors(n) {
        const base = [
          "#FF6B9D",
          "#FFA94D",
          "#4ECDC4",
          "#6BCB77",
          "#FFD93D",
          "#8e44ad",
          "#e67e22",
          "#2ecc71",
          "#3498db",
          "#e74c3c",
        ];
        const colors = [];
        for (let i = 0; i < n; i++) {
          colors.push(base[i % base.length]);
        }
        return colors;
      }

      // Simple HTML escape
      function escapeHtml(str) {
        if (!str) return "";
        return String(str)
          .replace(/&/g, "&amp;")
          .replace(/</g, "&lt;")
          .replace(/>/g, "&gt;")
          .replace(/"/g, "&quot;")
          .replace(/'/g, "&#039;");
      }

      // Close modal when clicking outside panel
      analyticsModal.addEventListener("click", (e) => {
        if (e.target === analyticsModal) analyticsModal.style.display = "none";
      });

      // when page loads, nothing to do ‚Äî analytics loads on button click
    </script>
  </body>
